{
  "version": 2,
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/health",
      "destination": "/api/server.js"
    },
    {
      "source": "/publisher-dashboard",
      "destination": "/public/publisher-dashboard.html"
    },
    {
      "source": "/dashboard",
      "destination": "/public/advanced-dashboard.html"
    },
    {
      "source": "/demo",
      "destination": "/public/publisher-demo.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}
