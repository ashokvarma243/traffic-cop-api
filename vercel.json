{
  "version": 2,
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/health",
      "destination": "/api/server.js"
    },
    {
      "source": "/publisher-dashboard",
      "destination": "/publisher-dashboard.html"
    },
    {
      "source": "/dashboard",
      "destination": "/advanced-dashboard.html"
    },
    {
      "source": "/demo",
      "destination": "/publisher-demo.html"
    },
    {
      "source": "/(.+).html",
      "destination": "/public/$1.html"
    },
    {
      "source": "/(.+).js",
      "destination": "/public/$1.js"
    },
    {
      "source": "/(.+).css",
      "destination": "/public/$1.css"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}

