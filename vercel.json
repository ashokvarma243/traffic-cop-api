{
  "version": 2,
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/health",
      "destination": "/api/server.js"
    },
    {
      "source": "/publisher-dashboard",
      "destination": "/publisher-dashboard.html"
    },
    {
      "source": "/dashboard",
      "destination": "/advanced-dashboard.html"
    },
    {
      "source": "/demo",
      "destination": "/publisher-demo.html"
    },
    {
      "source": "/(.*\\.(html|js|css|png|jpg|gif|ico|svg))",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ]
}
